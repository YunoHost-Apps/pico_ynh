{
    "name": "Pico",
    "id": "pico",
    "packaging_format": 1,
    "description": {
        "en": "Stupidly simple, blazing fast, flat file CMS",
        "fr": "CMS incroyablement simple et rapide comme l'Ã©clair"
    },
    "version": "3.0.0~ynh1",
    "url": "https://picocms.org/",
    "upstream": {
        "license": "MIT",
        "website": "https://picocms.org/",
        "admindoc": "https://picocms.org/docs/",
        "code": "https://github.com/picocms/Pico"
    },
    "license": "MIT",
    "maintainer": {
        "name": "eric_G",
        "email": ""
    },
    "requirements": {
        "yunohost": ">= 11.0.9"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "php8.0-fpm"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain"
            },
            {
                "name": "path",
                "type": "path",
                "example": "/pico",
                "default": "/pico"
            },
            {
                "name": "site_title",
                "type": "string",
                "ask": {
                    "en": "The title of your website",
                    "fr": "Le titre de votre site web"
                }
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": true
            }
        ]
    }
}
